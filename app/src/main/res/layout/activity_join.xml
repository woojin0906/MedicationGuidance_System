<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/join_titlename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="150dp"
        android:text="회원가입"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/join_id"
        android:layout_width="290dp"
        android:layout_height="43dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/join_titlename"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="아이디" />

    <EditText
        android:id="@+id/join_password"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/join_id"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="numberPassword" />


    <EditText
        android:id="@+id/join_passwordchange"
        android:layout_width="290dp"
        android:layout_height="51dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/join_password"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="numberPassword" />

    <EditText
        android:id="@+id/join_name"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/join_passwordchange"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="이름" />

    <EditText
        android:id="@+id/join_phone"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/join_name"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="전화번호"
        android:inputType="phone" />

    <Button
        android:id="@+id/join_joinButton"
        android:layout_width="272dp"
        android:layout_height="67dp"
        android:layout_below="@id/join_phone"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#7688E8"
        android:onClick="onClick"
        android:text="가입하기"
        android:textSize="20sp" />




</RelativeLayout>